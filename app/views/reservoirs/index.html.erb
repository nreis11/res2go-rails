<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 reservoir-container well col-centered">
      <div class="panel panel-primary">
        <!-- Default panel contents -->
        <div class="panel-heading text-center">
          <h3 class="panel-title">All Reservoirs</h3>
        </div>

        <!-- Table -->
        <table class="table table-striped reservoir-table">
          <tr>
            <th>Name</th>
            <th>Storage (AF)</th>
            <th>Capacity (AF)</th>
            <th>% Capacity</th>
          </tr>
        <% @reservoirs.each do |reservoir| %>

            <tr class="reservoir-row">
              <td><%= reservoir.name %></td>
              <td><%= reservoir.storage %></td>
              <td><%= reservoir.capacity %></td>
              <td>
                <div class="progress">
                  <div class="progress-bar" role="progressbar" aria-valuenow="<%= reservoir.percent_capacity %>"
                  aria-valuemin="0" aria-valuemax="100" style="width:<%= reservoir.percent_capacity %>%">
                  <span class="sr-only"><%= reservoir.percent_capacity %>%</span>
                  </div>
                </div>
                <div class="percentage"><%= reservoir.percent_capacity %>%</div>  
              </td>
            </tr>

            <% end %>
        </table>
      </div>
      <div>
        <p>AF - Acre Feet</p>
      </div>
    </div>
  </div>
</div>