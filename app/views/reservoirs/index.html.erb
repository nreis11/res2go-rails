<div class="col-xs-12 col-sm-6 reservoir-container well col-centered">
  <div class="panel panel-primary">
    <!-- Default panel contents -->
    <div class="panel-heading text-center">
      <h3 class="panel-title">All Reservoirs</h3>
    </div>

    <!-- Table -->
    <table class="table table-striped">
      <tr>
        <th>Name</th>
        <th>Storage(AF)</th>
        <th>Capacity(AF)</th>
        <th>% Capacity</th>
      </tr>
    <% @reservoirs.each do |reservoir| %>

      <article id=<% reservoir.id %>>
        <tr>
          <td><%= reservoir.name %></td>
          <td><%= reservoir.storage %></td>
          <td><%= reservoir.capacity %></td>
          <td><%= reservoir.percent_capacity %></td>
        </tr>

        <% end %>
      </article>
    </table>
  </div>
</div>
