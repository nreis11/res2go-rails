<div class="container stat-container">
  <div class="col-sm-4 col-sm-offset-4 well">
    <h3>Edit <%= @stat.reservoir.name.split.map(&:capitalize).join(' ') %> Reservoir</h3>

    <%= form_for @stat, html: {class: "form-group"} do |f| %>

      <!-- Error partial -->
      <%= render 'partials/errors', locals: { data: @stat } %>

      <%= f.label :min %>
      <%= f.text_field :min, class: "form-control" %><br />

      <%= f.label :max %>
      <%= f.text_field :max, class: "form-control" %><br />  

      <%= f.submit class: "btn btn-primary" %>
    <% end %>  
  </div>
</div>  
